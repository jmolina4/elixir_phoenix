<h2>Listing residences</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for residence <- @residences do %>
    <tr>
      <td><%= residence.name %></td>

      <td class="text-right">
        <%= link "Show", to: residence_path(@conn, :show, residence), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: residence_path(@conn, :edit, residence), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: residence_path(@conn, :delete, residence), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New residence", to: residence_path(@conn, :new) %>
